<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2124">

    <LinearLayout
        android:id="@+id/main_content_layout"
        android:layout_width="match_parent"
        android:layout_height="654dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        tools:ignore="UselessParent,TextSizeCheck">

        <TextView
            android:id="@+id/medipal_title"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="@string/medipal"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/today_medications_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:text="@string/today_s_medicationss"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ibuprofen_layout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#0F2124"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ibuprofen_tablet_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/todoo"
                    android:src="@drawable/ic_tablet"
                    app:tint="@android:color/white"
                    tools:ignore="VisualLintBounds" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ibuprofen_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ibuprofen"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ibuprofen_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_8_00_am"
                        android:textColor="#8FC7CC"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vitamin_d_layout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#0F2124"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vitamin_d_tablet_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/todoo"
                    android:src="@drawable/ic_tablet"
                    app:tint="@android:color/white"
                    tools:ignore="VisualLintBounds" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vitamin_d_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vitamin_d"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vitamin_d_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_12_00_pm"
                        android:textColor="#8FC7CC"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/metformin_layout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="#0F2124"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/metformin_tablet_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/todoo"
                    android:src="@drawable/ic_tablet"
                    app:tint="@android:color/white"
                    tools:ignore="VisualLintBounds" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/metformin_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/metformin"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/metformin_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_6_00_pm"
                        android:textColor="#8FC7CC"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/upcoming_tasks_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:text="@string/upcoming_tasks"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/doctors_appointment_layout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#0F2124"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/doctors_appointment_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/todoo"
                    android:src="@drawable/ic_task"
                    app:tint="@android:color/white"
                    tools:ignore="VisualLintBounds" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/doctors_appointment_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/doctor_s_appointment"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/doctors_appointment_time"
                        android:layout_width="252dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tomorrow_10_00_am"
                        android:textColor="#8FC7CC"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/refill_prescription_layout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="#0F2124"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/refill_prescription_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/todoo"
                    android:src="@drawable/ic_task"
                    app:tint="@android:color/white"
                    tools:ignore="VisualLintBounds" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/refill_prescription_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refill_prescription"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/refill_prescription_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/next_week"
                        android:textColor="#8FC7CC"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/quick_access_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:text="@string/quick_access"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/track_vitals_layout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="#0F2124"
            android:orientation="vertical"
            tools:ignore="VisualLintBounds">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/track_vitals_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/todoo"
                    android:src="@drawable/ic_quick"
                    app:tint="@android:color/white"
                    tools:ignore="VisualLintBounds" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/track_vitals_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/track_vitals"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>