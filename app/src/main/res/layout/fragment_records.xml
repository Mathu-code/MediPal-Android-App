<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2124"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        tools:ignore="DuplicateIds,UselessParent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/records"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />   <!-- âœ… centers text inside full width -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:text="@string/medical_documents"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#0F2124"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- First LinearLayout with tablet icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tabletIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/todoo"
                        android:src="@drawable/ic_document"
                        app:tint="@android:color/white"
                        tools:ignore="VisualLintBounds" />
                </LinearLayout>

                <!-- Second LinearLayout on the right -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">  <!-- space from the icon -->

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_for_ibuprofen"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/uploaded_2024_07_20"
                        android:textColor="#8FC7CC"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#0F2124"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- First LinearLayout with tablet icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tabletIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/todoo"
                        android:src="@drawable/ic_document"
                        app:tint="@android:color/white"
                        tools:ignore="VisualLintBounds" />
                </LinearLayout>

                <!-- Second LinearLayout on the right -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">  <!-- space from the icon -->

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lab Results - Blood Test"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uploaded_2024_07_15"
                        android:textColor="#8FC7CC"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="#0F2124"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- First LinearLayout with tablet icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tabletIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/todoo"
                        android:src="@drawable/ic_document"
                        app:tint="@android:color/white"
                        tools:ignore="VisualLintBounds" />
                </LinearLayout>

                <!-- Second LinearLayout on the right -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">  <!-- space from the icon -->

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="189dp"
                        android:layout_height="wrap_content"
                        android:text="@string/immunization_record"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/uploaded_2024_07_10"
                        android:textColor="#8FC7CC"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:text="@string/quick_actions"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="390dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#0F2124"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- First LinearLayout with tablet icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tabletIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/todoo"
                        android:src="@drawable/ic_new_document"
                        app:tint="@android:color/white"
                        tools:ignore="VisualLintBounds" />
                </LinearLayout>

                <!-- Second LinearLayout on the right -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">  <!-- space from the icon -->

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_new_document"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>
