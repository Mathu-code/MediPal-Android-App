<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.medipal.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_trackVitalFragment"
            app:destination="@id/trackVitalFragment" />
    </fragment>

    <fragment
        android:id="@+id/trackVitalFragment"
        android:name="com.example.medipal.TrackVitalFragment"
        android:label="Track Vitals"
        tools:layout="@layout/fragment_track_vital" />



    <fragment
        android:id="@+id/remindersFragment"
        android:name="com.example.medipal.RemindersFragment"
        android:label="@string/menu_reminders"
        tools:layout="@layout/fragment_reminders"
        />

    <fragment
        android:id="@+id/recordsFragment"
        android:name="com.example.medipal.RecordsFragment"
        android:label="@string/menu_records"
        tools:layout="@layout/fragment_records"
        />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.medipal.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile"
        />
</navigation>
